<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th>Hostname</th>
      <th>Timestamp</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.message %></td>
        <td><%= event.hostname %></td>
        <td><%= event.timestamp %></td>
        <td><%= event.organization_id %></td>
        <td><%= link_to 'Show', organization_event_path(event.organization_id, event) %></td>
        <td><%= link_to 'Edit', edit_organization_event_path(event.organization_id, event) %></td>
        <td><%= link_to 'Destroy', organization_event_path(event.organization_id, event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%=  link_to 'New Event', new_organization_event_path(@organization) if @organization %>
